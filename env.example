# Firebase Configuration (Client-Side)
# Get these values from: https://console.firebase.google.com/ → Project Settings → Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Server-Side Only)
# Get from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
# Required for: Admin dashboard, API key management, tool usage tracking
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Analytics 4
# Get from: https://analytics.google.com/ → Admin → Data Streams
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Configuration
# Get from: Stripe Dashboard → Developers → API Keys
# Required for: Monetization tracking, sponsorship widget, admin dashboard
STRIPE_SECRET_KEY=sk_live_... or sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_... (optional, for webhooks)

# Stripe Price IDs (from Products → Pricing)
NEXT_PUBLIC_STRIPE_PRICE_CODE_SUPPORTER=price_1SeZh7D4sftWa1WtWsDwvQu5
NEXT_PUBLIC_STRIPE_PRICE_FEATURE_VOTER=price_1SeZhnD4sftWa1WtP5GdZ5cT
NEXT_PUBLIC_STRIPE_PRICE_CORPORATE=price_1SeZigD4sftWa1WtTODsYpwE
NEXT_PUBLIC_STRIPE_PRICE_FOUNDERS_CLUB=price_1Sg3ykD4sftWa1Wtheztc1hR
NEXT_PUBLIC_STRIPE_PRICE_DONATION=price_1SeZj0D4sftWa1WtXkkVps9a

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.pocketportfolio.app
NEXT_PUBLIC_APP_URL=https://www.pocketportfolio.app

# EOD Historical Data API (Free Tier: 20 calls/day, dividend data requires paid plan)
# Get from: https://eodhistoricaldata.com/ → API → Your API Key
# Note: Free tier does NOT include dividend endpoints
EODHD_API_KEY=your-eodhd-api-key-here

# Alpha Vantage API (Free Tier: 25 calls/day, INCLUDES dividend data)
# Get from: https://www.alphavantage.co/support/#api-key
# Recommended for: Dividend data on free tier (via OVERVIEW function)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Development Settings
NODE_ENV=development
DISABLE_YAHOO_QUOTE=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_PER_MIN=1000

# Waitlist Configuration
NEXT_PUBLIC_ENABLE_WAITLIST=true
WAITLIST_DOUBLE_OPT_IN=false
ENCRYPTION_SECRET=your-encryption-secret-here
MAIL_FROM=noreply@pocketportfolio.app
MAIL_PROVIDER=sendgrid# Brand V2 Configuration
NEXT_PUBLIC_BRAND_V2=true
NEXT_PUBLIC_BRAND_DEFAULT_THEME=system

# Google Drive API (Sovereign Sync)
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for Web application
# Authorized JavaScript origins: http://localhost:3001, https://www.pocketportfolio.app
# Authorized redirect URIs: http://localhost:3001, https://www.pocketportfolio.app
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

MAIL_PROVIDER=sendgrid